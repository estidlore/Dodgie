<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".activity.A_Info">

    <ImageView
        android:id="@+id/info_img_back"
        style="@style/btn"
        android:src="@drawable/back"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/info_version"
        android:textSize="@dimen/h6_size"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="@string/app_version"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/info_blieve"
        style="@style/rel"
        android:src="@drawable/iso_game"
        app:layout_constraintDimensionRatio="6"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:id="@+id/info_blieve"
        style="@style/rel"
        android:src="@drawable/ic_blieve"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:id="@+id/info_game"
        style="@style/rel"
        android:src="@drawable/ic_game"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/info_about"
        style="@style/constraint"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>