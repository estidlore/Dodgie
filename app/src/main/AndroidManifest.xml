<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blieve.dodgie">

    <!--
     <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_game"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_game"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- MAIN ACTIVITIES -->
        <activity
            android:name=".activity.A_Splash"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.A_Load"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Home"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Game"
            android:configChanges="orientation"
            android:screenOrientation="landscape" /> <!-- SUB MENUS -->
        <activity
            android:name=".activity.A_Style"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Info"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Leaderboard"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Shop"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.A_Options"
            android:configChanges="orientation"
            android:screenOrientation="landscape" />
    </application>

</manifest>